<h1>Burger Log</h1>
<div class="container-fluid">
<div class="row">
  <div class="col-4">
    <h2 class="listHeaders">Waiting To Devour...<img src="https://img.icons8.com/emoji/48/000000/drooling-face-emoji.png"></h2>
    <ul>
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="card col-4">
    <h2 id="cardHeader"><img src="https://img.icons8.com/emoji/48/000000/hamburger-emoji.png"> Add a Burger <img src="https://img.icons8.com/emoji/48/000000/hamburger-emoji.png"></h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <input type="radio" name="devour" value="1" checked> Wait to Devour<br>
        <input type="radio" name="devour" value="0"> Devour
      </div>

      <button class="btn btn-primary" type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-4">
    <h2 class="listHeaders"><img src="https://img.icons8.com/emoji/48/000000/face-savoring-food.png">Devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devour}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
</div>
<h1>Burger-Log</h1>

<div class="row">
  <div class="waiting col-4">
    <h2>Waiting To Devour</h2>
    <ul>
      {{#each burgers}}
      {{#if devour}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="card col-4">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <input type="radio" name="devour" value="1" checked> Wait to Devour<br>
        <input type="radio" name="devour" value="0"> Devour
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="devoured col-4">
    <h2>Devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devour}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>